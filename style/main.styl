$color1 = #0D8ECF
$color2 = #48B040
$color3 = #B0DE09
$color4 = #FCD202
$color5 = #FF6600
$color6 = #CD0D74
$color7 = #9900FF

$text-color = #333
$selection-color = #d8ebf6
$selection-border-color = #b4def6
$border-color = #ddd

html, body {
  width 100%
  height 100%
  font-family 'Open Sans'
}

.sweet-alert h2 {
  line-height normal
}

.drop-box {
  padding: 20px
  margin 0 10px
  border-radius 5px
  color $text-color
  background-color rgba(white, 0.7)
  box-shadow 0 0 0 transparent
  transition-duration 0.5s
  transition-property background-color box-shadow margin

  &.drop-box-account {
    font-weight 200
    font-size 2em
    text-align center
    img.account {
      width 128px
      height 128px
      border-radius 128px
      background-color white
      border solid 5px white
      margin-bottom 10px
    }
  }
  &.drop-box-movement {
    text-align left
    margin-top 15px
    padding: 20px 30px

    .amount {
      width 100px
      text-align right
    }
  }

  &.dragover, &.dragover-err {
    background-color rgba(white, 0.95)
    box-shadow 0 0 10px white
    margin 0 15px
    transform scale(1.1, 1.1)
  }
}

.drop-screen {
  display none
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(#000, 0.5)
  z-index 1000
}

body.dragover {
  .drop-screen {
    display flex
  }
}

.main-box {
  //position: relative;
  overflow scroll
  -webkit-overflow-scrolling touch
}

img.account {
  border-radius: 16px;
}

.panel .panel-body {
  padding: 10px 15px
}

.panel.panel-selection {
  position absolute
  left 200px
  right 0
  margin-top -1px
  border none
  border-top 1px solid $selection-border-color
  border-bottom 2px solid $selection-border-color
  border-radius 0
  box-shadow none
  line-height 34px
  z-index 100
  background-color $selection-color

  .panel-body {
    padding-left 0

    a {
      display inline-block
      width 36px
      text-align center
    }
  }
}

.panel.filters {
  border-radius 0
  border none
  border-top solid 1px $border-color
  -webkit-box-shadow: none
  -moz-box-shadow: none
  box-shadow: none
  margin-bottom 0
}

.selectable-box {
  i {
    display: none;
  }
  &:hover, &.selectable-box-visible {
    img {
      display: none
    }
    i {
      display: inline-block
    }
  }
}

form.form-horizontal .fake-control {
  line-height 34px
}
textarea[msd-elastic] {
  resize: none;
  transition: 0.25s;
}

#accounts {
  width 200px
  background-color #eee
  //padding 10px
  text-align center

  h2 {
    text-transform uppercase
    font-size 1em
  }

  .total {
    margin-bottom 10px
    font-size 2em
    font-weight 200
  }

  .account {
    padding: 10px 20px
    color white
    img {
      padding 3px
      border-radius 64px
      background-color white
    }

    &.account-new {
      .md {
        font-size: 48px
        line-height 64px
        color $text-color
      }
    }
  }
}

#header {
  padding 0 20px

  h2 {
    text-transform uppercase
    font-size 1em
  }
}

.legend {
  ul {
    list-style-type: none;
    padding: 20px 0 0 0;
    margin: 0;
  }
}

#monthView {
  #header {
    h2 {
      margin-bottom 20px
    }
  }
  .categories {
    border-left solid 4px white
    position: relative;
    width: 80px;

    & > div {
      color white
      border-bottom solid 4px white
      min-height 20px
    }
    & > div:last-child {
      border-bottom: none
    }
  }
  .funnel {
    width 120px
    overflow hidden
  }
}

@require 'component/*'