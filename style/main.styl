$color1 = #0D8ECF
$color2 = #48B040
$color3 = #B0DE09
$color4 = #FCD202
$color5 = #FF6600
$color6 = #CD0D74
$color7 = #9900FF

$text-color = #333
$selection-color = #d8ebf6

html, body {
  width 100%
  height 100%
  font-family 'Open Sans'
}

.sweet-alert h2 {
  line-height normal
}

.modal-header {
  a {
    i.md-2x {
      line-height 1.3em
    }
    color #ccc
    &:hover {
      color $text-color
    }
    &:active {
      color #666
    }
  }
}

.modal-backdrop {
  bottom: 0;
}

.drop-box {
  padding: 20px
  margin 0 10px
  //border: dashed 1px #ccc
  border-radius 5px
  font-size 2em
  font-weight 200
  color $text-color
  background-color rgba(white, 0.7)
  box-shadow 0 0 0 transparent
  transition-duration 0.5s
  transition-property background-color box-shadow margin

  img.account {
    width 128px
    height 128px
    border-radius 128px
    background-color white
    border solid 5px white
    margin-bottom 10px
  }

  &.dragover, &.dragover-err {
    background-color rgba(white, 0.95)
    box-shadow 0 0 10px white
    margin 0 15px
    transform scale(1.1, 1.1)
  }
}

.drop-screen {
  display none
}

body.dragover {
  .drop-screen {
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color rgba(#000, 0.5)
    z-index 1000
  }
}

.main-box {
  //position: relative;
  overflow scroll
  -webkit-overflow-scrolling touch
}

img.account {
  border-radius: 16px;
}

.fa.movement-in {
  color: #55bd00
}
.fa.movement-out {
  color: #bd0000
}

.panel .panel-body {
  padding: 10px 15px
}

.panel.panel-selection {
  position absolute
  left 0
  right 200px
  border 1px solid #ddd
  border-radius 0
  box-shadow none
  line-height 34px
  z-index 100

  .panel-body {
    padding-left 0

    a {
      display inline-block
      width 36px
      text-align center
    }
  }

  &.ui-scrollfix {
    position fixed
    top 0
    border-top-color white
  }
}

table.table-movements {
  margin-bottom 0

  tbody>tr>th {
    white-space nowrap
    padding-top 0
    padding-bottom 0
    line-height 54px
  }

  tr.replaceable > td {
    background-color: #fff884;
  }
  tr.selected > td {
    background-color: $selection-color
    border-color: #b4def6
  }

  tbody>tr>td {
    vertical-align middle
  }
  td.selection, th.selection {
    width 36px
    padding 0
    text-align center
    position relative
  }
  td.selection i {
    cursor: pointer;

    position: absolute
    left 0
    right 0
    top 50%
    margin-top -20px
  }
  td.selection a {
    display block

    position absolute
    left 0
    top 0
    right 0
    bottom 0
    color $text-color;
  }
  td.account, th.account {
    text-align: center;
  }
  td.amount, th.amount {
    text-align right
    white-space nowrap
  }
  td.direction {
    white-space nowrap
  }

  td.description {
    &.editable {
      position relative

      & > div {
        margin-right 21px + 8px
      }
    }
    a.edit {
      display block
      position absolute
      top 0
      bottom 0
      right 0
      opacity 0.3
      width 21px + 18px

      i {
        position absolute
        top 50%
        left 50%
        margin-left -11.5px
        margin-top -5px
        height 21px
        width 21px
      }

      &:hover {
        opacity 1
        background-color $selection-color
      }
    }
  }
  tr.selected > td.description.editable {
    a.edit {
      opacity 0.8
    }
  }
}

.selectable-box {
  i {
    display: none;
  }
  &:hover, &.selectable-box-visible {
    img {
      display: none
    }
    i {
      display: inline-block
    }
  }
}

form.form-horizontal .fake-control {
  line-height 34px
}
textarea[auto-grow] {
  resize: none;
  transition: 0.25s;
}

#accounts {
  width 200px
  background-color #eee
  //padding 10px
  text-align center

  h2 {
    text-transform uppercase
    font-size 1em
  }

  .total {
    margin-bottom 10px
    font-size 2em
    font-weight 200
  }

  .account {
    padding: 10px 20px
    color white
    img {
      padding 3px
      border-radius 64px
      background-color white
    }

    &.account-new {
      .md {
        font-size: 48px
        line-height 64px
        color $text-color
      }
    }
  }
}

#header {
  padding 0 20px

  h2 {
    text-transform uppercase
    font-size 1em
  }
}
